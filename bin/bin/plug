#!/bin/bash

# Add plugins using Vim8's native plugin 
# See: 
# -- https://begriffs.com/posts/2019-07-19-history-use-vim.html#third-party-plugins
# -- https://shapeshed.com/vim-packages/

cd "$HOME/.dotfiles"
plug_dir="vim/dot-vim/pack/plugins/start"
repo=$1
repo_name=${repo#*/}

git submodule add https://github.com/$repo.git \
    "$plug_dir/$repo_name"
