[user]
    email = mbkupfer@gmail.com
    name = Maxim Kupfer
[core]
    excludesFile = ~/.config/git/ignore
    editor = /usr/local/bin/vim
[alias]
    st = status -sb
    co = checkout
    lol = log --graph --all --decorate --pretty=oneline --abbrev-commit
    ci = commit
    l1 = log --oneline
    a = add
    b = branch --sort=-committerdate
    bm = branch --merged
    bnm = branch --no-merged
    ci = commit
    co = checkout
    h = help
    hc = help config
    lf = log --pretty=fuller
    s = status
    alist = config --get-regexp alias
    ctags = !.git/hooks/ctags
    rp = rev-parse
[log]
    abbrevCommit = true
    date = local
    decorate = short
[init]
    templatedir = ~/.config/git_template
